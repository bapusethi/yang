= simple_form_for(@pet, html: { class: 'form' }) do |f|
  .form-group
    = f.input :name, input_html: { class: 'form-control' }
    = f.association :pictures do |pf|
      .form-group
        = pf.file_field :image, input_html: { class: 'form-control' }
  .form-group
    = f.input :gender, :as => :select, :collection => [:male,:female], input_html: { class: 'form-control' }
  .form-group
    = f.input :years, input_html: { class: 'form-control' }
  .form-group
    = f.input :months, input_html: { class: 'form-control' }
  .form-group
    = f.input :description, input_html: { class: 'form-control' }
  
  = f.button :submit, { class: 'btn-primary' }
